  <artifactId>ziggurat-html</artifactId>
  <packaging>war</packaging>
  <name>Ziggurat HTML</name>

  <properties>
    <gwt.module>ziggurat.Ziggurat</gwt.module>
    <gwt.name>ziggurat</gwt.name>
    <gae.version>1.9.9</gae.version> <!-- Google App Engine SDK version -->
